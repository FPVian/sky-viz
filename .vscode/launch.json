{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "FlightsEnvPicker",
            "type": "pickString",
            "description": "Choose environment for Flights",
            "options": [
                "default",
                "dev",
                "staging",
                "test"
            ],
            "default": "default"
        },
        {
            "id": "SkyvizEnvPicker",
            "type": "pickString",
            "description": "Choose environment for SkyViz",
            "options": [
                "default",
                "dev",
                "staging",
                "prod",
                "test"
            ],
            "default": "default"
        },
    ],
    "configurations": [
        {
            "name": "Flights",
            "type": "python",
            "request": "launch",
            "module": "flights",
            "console": "integratedTerminal",
            "env": { "SKYVIZ_ENV": "${input:FlightsEnvPicker}" }
        },
        {
            "name": "SkyViz",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run", 
                "${workspaceFolder}/src/skyviz/Home.py"
            ],
            "console": "integratedTerminal",
            "env": { "SKYVIZ_ENV": "${input:SkyvizEnvPicker}" },
        },
        {
            "name": "Run Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "SKYVIZ_ENV": "${input:SkyvizEnvPicker}" },
        },
    ],
    "compounds": [
        {
            "name": "Flights & SkyViz",
            "configurations": ["Flights", "SkyViz"]
        }
    ],
}